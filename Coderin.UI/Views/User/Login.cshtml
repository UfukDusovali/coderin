@model Coderin.Entity.User

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-8 main-content single-content" style="padding-left:300px;padding-top:100px">
        <p style="margin-left:100px">Giriş Yap</p>
        <div class="form-group">
            <div class="col-md-5">
                <input type="email" name="txtEmail" id="txtEmail" placeholder="E-mail" class="form-control" /><br />
                <input type="password" name="txtPassword" id="txtPassword" placeholder="Password" class="form-control" /><br />
                <input type="submit" value="Giriş" class="btn btn-default" style="margin-left:85px" />
            </div>
        </div>
        <div class="editor-field">
            <input type="password" name="txtPassword" id="txtPassword" />
        </div>
    </div>
}
