@model IEnumerable<Coderin.Entity.UserBehaviour>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Kullanıcı Davranış Yönetimi</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                   
                        <h3 class="box-title">Kullanıcı Davranış</h3>
                    </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-striped data-table">
                        @*table table-bordered table-hover*@
                        <thead>
                            <tr>
                                <th>Kullanıcı Adı</th>
                                <th>Name</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.User.Name @item.User.Surname</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a href="~/Admin/UserBehaviour/Edit/@item.Id">Güncelle</a> |
                                        <a href="~/Admin/UserBehaviour/Details/@item.Id">Detay</a> |
                                        <a href="~/Admin/UserBehaviour/Delete/@item.Id" onclick="return window.confirm('Soru Silinecek Emin Misiniz!');">Sil</a>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</section>